<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_sa_adnew_entry"
    android:orientation="vertical"
    android:layout_weight="4"
    tools:context=".ViewEntry">



    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <ImageView
        android:id="@+id/profile_pic"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:srcCompat="@drawable/capture" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <TextView
        android:id="@+id/edt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:text="Name:"
        android:textSize="20dp"
        android:backgroundTint="#ffffff"
        android:textColor="#ffffff" />
    <TextView
        android:id="@+id/txt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:text="hello"
        android:textSize="18dp"
        android:backgroundTint="#ffffff"
        android:textColor="#FFFFFF" />


    <TextView
        android:id="@+id/edt_remark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:text="Remark:"
        android:textSize="20dp"
        android:backgroundTint="#ffffff"
        android:textColor="#ffffff" />
    <TextView
        android:id="@+id/txt_remark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:text="po:"
        android:textSize="20dp"
        android:backgroundTint="#ffffff"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/edt_bday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:text="Birthday:"
        android:textSize="20dp"
        android:backgroundTint="#ffffff"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/txt_bday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:text="sana"
        android:textSize="18dp"
        android:backgroundTint="#ffffff"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/edt_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:text="Gender:"
        android:textSize="20dp"
        android:backgroundTint="#ffffff"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/txt_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:text="okay"
        android:textSize="18dp"
        android:backgroundTint="#ffffff"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/edt_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:text="Address:"
        android:textSize="20dp"
        android:backgroundTint="#ffffff"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/txt_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:text="ka lang"
        android:textSize="18dp"
        android:backgroundTint="#ffffff"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/edt_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:text="Contact Number:"
        android:textSize="20dp"
        android:backgroundTint="#ffffff"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/txt_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:text="kasi ako"
        android:textSize="18dp"
        android:backgroundTint="#ffffff"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/edt_hobbies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:text="Hobbies:"
        android:textSize="20dp"
        android:backgroundTint="#ffffff"
        android:textColor="#ffffff" />
    <TextView
        android:id="@+id/txt_hobbies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:text="goods"
        android:textSize="18dp"
        android:backgroundTint="#ffffff"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/edt_otherinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:text="Other Information:"
        android:textSize="20dp"
        android:backgroundTint="#ffffff"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/txt_otherinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:text="lang (sad effect)"
        android:textSize="18dp"
        android:backgroundTint="#ffffff"
        android:textColor="#FFFFFF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_addEntry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/addentrybutton" />
    </LinearLayout>

</LinearLayout>